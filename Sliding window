class Solution:
    def minSubArrayLen(self, target: int, nums: List[int]) -> int:
        left = 0
        right = 0
        sums = 0
        length = float('inf')
        n = len(nums)
        
        while right < n:
            sums += nums[right]
            
            while sums >= target:
                length = min(length, right - left + 1)
                sums -= nums[left]
                left += 1
            
            right += 1
        
        return 0 if length == float('inf') else length
